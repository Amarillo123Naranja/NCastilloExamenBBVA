@model ML.Producto
@{
    ViewBag.Title = "Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="width: 18rem;">
    <img src="@Model.Imagen" class="card-img-top" alt="Cargando">
    <div class="card-body">
        <h3 class="card-title"><b>@Model.Nombre</b></h3>
        <h4 class="card-text"><b>$ @Model.Precio</b></h4>
    </div>

</div>


<br />
<br />

<form method="post" action="http://localhost:50092/Producto/Compra">

    <div class="row">
        <div class="col-md-4">
            <label>Introduzaca la cantidad de monedas de $10</label>
            <input type="number" name="moneda10" />

        </div>

        <div class="col-md-4">
            <label>Introduzca la cantidad de monedas de $50</label>
            <input type="number" name="moneda50" />

        </div>

        <div class="col-md-4">
            <label>Introduzca la cantidad de monedas de $100</label>
            <input type="number" name="moneda100" />
        </div>

        <div class="row">
            <div class="col-md-4">

                <button class="btn btn-danger" type="submit">Listo</button>
            </div>

        </div>

    </div>

</form>


<br />



